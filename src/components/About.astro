---
import { siteConfig } from "../config";
---

<section id="about" class="p-8 sm:p-12 md:p-16 lg:p-24 bg-[#0a0a0a]">
  <div>
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
      <div class="lg:col-span-4">
        <h2
          class="text-3xl sm:text-4xl md:text-5xl xl:text-6xl font-bold text-white"
        >
          Sobre MÃ­
        </h2>
        <div
          class="w-[75px] h-[5px] mt-2 rounded-full"
          style={`background-color: ${siteConfig.accentColor}`}
        >
        </div>
      </div>

      <div class="lg:col-span-8 space-y-8">
        <p class="text-lg sm:text-xl leading-relaxed text-zinc-400">
          {siteConfig.aboutMe}
        </p>

        <div class="pt-4">
          <div class="flex flex-wrap gap-3">
            {
              siteConfig.skills.map((skill) => (
                <span 
                  class="px-3 sm:px-4 py-1.5 sm:py-2 bg-zinc-800/50 border border-zinc-700 text-zinc-300 rounded-full text-sm sm:text-base font-medium hover:border-[var(--accent-color)]/50 hover:text-[var(--accent-color)] transition-all duration-200"
                  style={`--accent-color: ${siteConfig.accentColor}`}
                >
                  {skill}
                </span>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
