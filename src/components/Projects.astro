---
import { siteConfig } from "../config";
const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
---

{
  hasProjects && (
    <section id="projects" class="p-8 sm:p-12 md:p-16 lg:p-24 bg-[#0f0f0f]" style={`--accent-color: ${siteConfig.accentColor}`}>
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-6xl font-bold text-white">
              Lo Que Hago
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="space-y-6">
              {siteConfig.projects.map((project, index) => {
                const Component = project.link ? "a" : "div";
                const linkProps = project.link
                  ? {
                      href: project.link,
                      target: "_blank",
                      rel: "noopener noreferrer",
                    }
                  : {};

                return (
                  <div class="group relative">
                    <Component
                      {...linkProps}
                      class={`block relative p-6 sm:p-8 bg-zinc-900/50 rounded-xl border border-zinc-800 transition-all duration-300 ${
                        project.link
                          ? "hover:bg-zinc-800/50 hover:border-[var(--accent-color)]/30"
                          : "hover:border-zinc-700"
                      }`}
                    >
                      {project.link && (
                        <div class="absolute top-6 right-6 sm:top-8 sm:right-8 w-10 h-10 flex items-center justify-center bg-zinc-800 rounded-full text-zinc-400 transition-all duration-300 group-hover:bg-[var(--accent-color)] group-hover:text-white">
                          <svg
                            class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-0.5 group-hover:-translate-y-0.5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M7 17L17 7M17 7H7M17 7V17"
                            />
                          </svg>
                        </div>
                      )}

                      <div class="space-y-4">
                        <div>
                          <span
                            class="text-sm font-mono"
                            style={{ color: siteConfig.accentColor }}
                          >
                            0{index + 1}
                          </span>
                          <h3 class="text-xl sm:text-2xl font-bold text-white mt-1">
                            {project.name}
                          </h3>
                        </div>

                        <p
                          class={`text-base sm:text-lg text-zinc-400 leading-relaxed ${project.link ? "pr-12 sm:pr-14" : ""}`}
                        >
                          {project.description}
                        </p>

                        {project.skills && project.skills.length > 0 && (
                          <div class="flex flex-wrap gap-2 pt-2">
                            {project.skills.map((skill) => (
                              <span
                                class="px-3 py-1.5 bg-zinc-800 text-zinc-300 rounded-lg text-xs sm:text-sm font-medium border border-zinc-700 transition-all duration-300 group-hover:border-[var(--accent-color)]/30"
                              >
                                {skill}
                              </span>
                            ))}
                          </div>
                        )}
                      </div>
                    </Component>
                  </div>
                );
              })}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
