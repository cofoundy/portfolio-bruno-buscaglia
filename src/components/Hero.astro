---
import { siteConfig } from "../config";
---

<div
  id="hero"
  class="relative isolate overflow-hidden bg-[#0a0a0a] min-h-screen flex items-center"
  style={`--accent-color: ${siteConfig.accentColor}`}
>
  <!-- Gradient overlay -->
  <div
    class="absolute inset-0 -z-10"
    style={`background: radial-gradient(ellipse 800px 800px at 50% 0%, ${siteConfig.accentColor}15 0%, ${siteConfig.accentColor}08 30%, transparent 70%)`}
  >
  </div>
  
  <!-- Subtle grid pattern -->
  <svg
    aria-hidden="true"
    class="absolute inset-0 -z-10 size-full stroke-zinc-800/50 [mask-image:radial-gradient(100%_100%_at_top_right,white,transparent)]"
  >
    <defs>
      <pattern
        x="50%"
        y={-1}
        id="grid-pattern"
        width={80}
        height={80}
        patternUnits="userSpaceOnUse"
      >
        <path d="M.5 80V.5H80" fill="none"></path>
      </pattern>
    </defs>
    <rect
      fill="url(#grid-pattern)"
      width="100%"
      height="100%"
      stroke-width={0}></rect>
  </svg>

  <div class="w-full mx-auto px-6 sm:px-12 lg:px-24 py-16">
    <div class="flex flex-col lg:flex-row items-center gap-12 lg:gap-16">
      
      <!-- Photo -->
      <div class="animate-fade-in">
        <div class="relative">
          <div 
            class="absolute -inset-1 rounded-full blur-lg opacity-50"
            style={`background: ${siteConfig.accentColor}`}
          ></div>
          <img
            src={`${import.meta.env.BASE_URL}/profile.jpg`}
            alt={siteConfig.name}
            class="relative w-48 h-48 sm:w-56 sm:h-56 lg:w-72 lg:h-72 rounded-full object-cover border-2 border-zinc-800"
          />
        </div>
      </div>

      <!-- Content -->
      <div class="text-center lg:text-left">
        <h1
          class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight text-white animate-fade-in animation-delay-200"
        >
          {siteConfig.name}
        </h1>
        
        <p
          class="mt-4 text-xl sm:text-2xl font-medium animate-fade-in animation-delay-300"
          style={`color: ${siteConfig.accentColor}`}
        >
          {siteConfig.title}
        </p>
        
        <p
          class="mt-6 max-w-xl text-base sm:text-lg text-zinc-400 leading-relaxed animate-fade-in animation-delay-400"
        >
          Emprendedor apasionado por construir marcas que conectan.
        </p>

        <!-- Social Links -->
        <div class="mt-8 flex justify-center lg:justify-start gap-4 animate-fade-in animation-delay-500">
          {
            siteConfig.social?.email && (
              <a
                href={`mailto:${siteConfig.social.email}`}
                aria-label="Email"
                class="p-3 rounded-full bg-zinc-800/50 border border-zinc-700 text-zinc-400 transition-all duration-300 hover:text-[var(--accent-color)] hover:border-[var(--accent-color)]/50 hover:bg-[var(--accent-color)]/10"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="h-5 w-5"
                >
                  <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                  <path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z" />
                  <path d="M3 7l9 6l9 -6" />
                </svg>
              </a>
            )
          }
          {
            siteConfig.social?.instagram && (
              <a
                href={siteConfig.social.instagram}
                target="_blank"
                rel="noopener noreferrer"
                aria-label="Instagram"
                class="p-3 rounded-full bg-zinc-800/50 border border-zinc-700 text-zinc-400 transition-all duration-300 hover:text-[var(--accent-color)] hover:border-[var(--accent-color)]/50 hover:bg-[var(--accent-color)]/10"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="h-5 w-5"
                >
                  <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                  <path d="M4 4m0 4a4 4 0 0 1 4 -4h8a4 4 0 0 1 4 4v8a4 4 0 0 1 -4 4h-8a4 4 0 0 1 -4 -4z" />
                  <path d="M12 12m-3 0a3 3 0 1 0 6 0a3 3 0 1 0 -6 0" />
                  <path d="M16.5 7.5l0 .01" />
                </svg>
              </a>
            )
          }
          {
            siteConfig.social?.phone && (
              <a
                href={`https://wa.me/${siteConfig.social.phone.replace(/\D/g, '')}`}
                target="_blank"
                rel="noopener noreferrer"
                aria-label="WhatsApp"
                class="p-3 rounded-full bg-zinc-800/50 border border-zinc-700 text-zinc-400 transition-all duration-300 hover:text-[var(--accent-color)] hover:border-[var(--accent-color)]/50 hover:bg-[var(--accent-color)]/10"
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="h-5 w-5"
                >
                  <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                  <path d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9" />
                  <path d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1" />
                </svg>
              </a>
            )
          }
        </div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="h-6 w-6 text-zinc-500"
    >
      <path d="M12 5v14" />
      <path d="M19 12l-7 7l-7 -7" />
    </svg>
  </div>
</div>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.8s ease-out forwards;
    opacity: 0;
  }

  .animation-delay-200 {
    animation-delay: 0.2s;
  }

  .animation-delay-300 {
    animation-delay: 0.3s;
  }

  .animation-delay-400 {
    animation-delay: 0.4s;
  }

  .animation-delay-500 {
    animation-delay: 0.5s;
  }
</style>
